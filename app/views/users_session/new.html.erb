
 <%= form_tag users_session_index_path, :method => :post, :class => "form-signin", :role => "form" do %>
    <h2 class="form-signin-heading">My Address Book</h2>
    <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: "alert alert-#{name} bottom-margin" %>
    <% end %> 
    <label for="inputEmail" class="sr-only">Email address</label>
    <input type="text" name="username" id="inputUsername" class="form-control" placeholder="username or email" required="" autofocus="">
    <label for="inputPassword" class="sr-only" >Password</label>
    <input type="password"  name="password" id="inputPassword" class="form-control" placeholder="Password" required="">
    
    <div class="checkbox">
      <span class="label label-warning pull-right" style="margin-bottom:5px;"><a href="<%= signup_index_path %>" class="white-color">Sign Up here!</a></span>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
<% end %>